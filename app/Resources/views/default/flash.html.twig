{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="{{ 'Zamknij' | trans }}">
            <span aria-hidden="true">×</span>
        </button>
        <div class="flash-icon"><i class="material-icons">&#xE5CD;</i></div>
        <span><strong>Błąd - </strong>{{ flashMessage|raw }}</span>
    </div>
{% endfor %}
